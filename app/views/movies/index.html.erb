<h1>Listing movies</h1>

<table>
  <tr>
    <th>Image url</th>
    <th>Title</th>
    <th>Genres</th>
    <th>Duration</th>
    <th>Country</th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td>
     <%= image_tag(movie.image_url, class: 'list_image') %>
    </td>
    <td><%= movie.title %></td>
    <td><%= movie.genres %></td>
    <td><%= movie.duration %></td>
    <td><%= movie.country %></td>
    <td><%= link_to 'Show', movie %></td>

    <% if can? :update, @movie %>
     <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <%end%>
    <% if can? :destroy, @movie%> 
     <td><%= link_to 'Destroy', movie, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>

  </tr>
<% end %>
</table>

<br />

<% if can? :create, @movie%>
 <%= link_to 'New Movie', new_movie_path %>
<% end %>
