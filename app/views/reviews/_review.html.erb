   <div class = "row">
   <div class = "span16">
   <p>
    <b>Author:</b>
    <%= review.author %>
  </p>
  <p>
    <b>Content:</b>
    <%= review.content %>
  </p>

  <p>
    <b>Rank:</b>
    <%= review.rank %>
  </p>

  <p>
  <% if current_user.try(:admin?) %>
  <%= link_to 'Destroy Review', [review.movie, review],
               :confirm => 'Are you sure?',
               :method => :delete %>
  <% end %>
   </div>            
  </div>
  <p>
   <h3>Comments</h3>
    <%= render review.comments%>

   <h3>Add a comment:</h3>
   <%= form_for([review, review.comments.build]) do |f| %>
    <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  </p>

</p>