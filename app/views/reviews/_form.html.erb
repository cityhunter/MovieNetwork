<%= form_for([@movie, @movie.reviews.build]) do |f| %>
  

  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :rank %><br />
    <%= f.number_field :rank %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
